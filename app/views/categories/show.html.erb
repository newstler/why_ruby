<%# Set meta tags for this category %>
<% content_for :meta_title, t('meta.categories.show.title', category_name: @category.name) %>
<% content_for :meta_summary, t('meta.categories.show.summary', category_name_lower: @category.name.downcase) %>
<% content_for :meta_keywords, t('meta.categories.show.keywords', category_name: @category.name) %>

<div class="space-y-8">
  <div class="bg-white shadow rounded-lg p-8">
    <h1 class="text-3xl font-bold text-gray-900 mb-2"><%= @category.name %></h1>
    <p class="text-gray-600">Browse all posts in this category</p>
  </div>

  <div class="space-y-4">
    <% if @posts.any? %>
      <% @posts.each do |post| %>
        <div class="bg-white shadow rounded-lg p-6">
          <div class="flex items-start justify-between">
            <div class="flex-1">
              <div class="flex items-center space-x-3 mb-2">
                <% if post.link? %>
                  <span class="text-sm text-blue-600">ðŸ”— External Link</span>
                <% end %>
              </div>
              <h3 class="text-xl font-semibold mb-2">
                <%= link_to post.title, post_link_url(post), post_link_options(post).merge(class: "text-gray-900 hover:text-red-600") %>
              </h3>
              <% if post.summary.present? %>
                <p class="text-gray-600 mb-4"><%= truncate(post.summary, length: 200) %></p>
              <% end %>
              <div class="flex flex-wrap items-center gap-x-4 gap-y-2">
                <div class="flex items-center space-x-2">
                  <% if post.user.avatar_url.present? %>
                    <%= image_tag post.user.avatar_url, alt: post.user.username, class: "h-6 w-6 rounded-full" %>
                  <% end %>
                  <%= link_to post.user.username, user_path(post.user), class: "text-sm text-gray-700 hover:text-gray-900" %>
                </div>
                <span class="text-sm text-gray-500"><%= format_post_date(post.created_at) %></span>
                <div class="flex items-center space-x-1 text-sm text-gray-500">
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"></path>
                  </svg>
                  <span><%= post.comments.count %></span>
                </div>
                <% if post.tags.any? %>
                  <div class="hidden md:flex flex-wrap gap-1">
                    <% post.tags.each do |tag| %>
                      <%= link_to tag.name, tag_path(tag), class: "text-xs bg-gray-200 text-gray-700 px-2 py-1 rounded hover:bg-gray-300" %>
                    <% end %>
                  </div>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      <% end %>
      
      <div class="mt-8">
        <%= paginate @posts %>
      </div>
    <% else %>
      <div class="bg-white shadow rounded-lg p-8 text-center">
        <p class="text-gray-600">No posts in this category yet.</p>
        <% if user_signed_in? %>
          <%= link_to "Create the first one", new_post_path, class: "mt-4 inline-block text-red-600 hover:text-red-800" %>
        <% end %>
      </div>
    <% end %>
  </div>
</div> 