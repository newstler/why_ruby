<div class="space-y-16">
  <!-- Hero Section -->
  <div class="max-w-4xl  mx-auto flex flex-col items-center">
    <%= image_tag "heart.png", class: "w-32 md:w-64 h-32 md:h-64" %>
    <p class="text-2xl md:text-6xl text-gray-600 font-bold text-center mt-8">
      Discover why <span class="text-red-600">Ruby</span> continues to be a <span class="text-red-600">beloved language</span> for developers worldwide:
    </p>

<!--    <p class="text-xl md:text-3xl text-gray-600 font-bold text-center mt-8">-->
<!--      And share articles, tutorials, and resources with our community.-->
<!--    </p>-->
  </div>

  <!-- Pinned Posts -->
  <% if @pinned_posts.any? %>
    <div class="space-y-4">
<!--      <h2 class="text-2xl font-bold text-gray-900">Featured Posts</h2>-->
      <div class="hidden lg:flex gap-6">
        <% # Split pinned posts into 3 columns for desktop, maintaining left-to-right order %>
        <% pinned_cols = [[], [], []] %>
        <% @pinned_posts.each_with_index do |post, index| %>
          <% pinned_cols[index % 3] << post %>
        <% end %>
        
        <% pinned_cols.each do |column_posts| %>
          <div class="flex-1 space-y-6">
            <% column_posts.each do |post| %>
              <%= render 'posts/post_tile', post: post %>
            <% end %>
          </div>
        <% end %>
      </div>
      
      <% # Mobile view for pinned posts - simple grid %>
      <div class="lg:hidden grid grid-cols-1 md:grid-cols-2 gap-6">
        <% @pinned_posts.each do |post| %>
          <%= render 'posts/post_tile', post: post %>
        <% end %>
      </div>
    </div>
  <% end %>
</div>

<!-- Success Stories Floating Logos (Full Width) -->
<% if @success_stories.any? %>
  <div class="py-8 md:py-16 bg-gray-50 my-8 md:my-16">
    <h2 class="text-center text-sm font-semibold text-gray-600 tracking-wide uppercase mb-6 md:mb-12">
      Success powered by Ruby
    </h2>
    <div class="relative logo-carousel-container" data-controller="logo-carousel">
      <div class="overflow-hidden relative">
        <div class="logo-carousel-track flex" data-logo-carousel-target="track">
          <!-- Duplicate the logos for seamless infinite scroll with random order -->
          <% shuffled_stories = @success_stories.to_a.shuffle %>
          <% # Create multiple sets for seamless looping %>
          <% 2.times do |set_index| %>
            <% shuffled_stories.each_with_index do |story, index| %>
                      <%= link_to post_path(story), 
                class: "logo-item flex-shrink-0 transition-all duration-300 group relative mx-3 md:mx-10",
              data: { 
                action: "mouseenter->logo-carousel#pause mouseleave->logo-carousel#resume mousemove->logo-carousel#showTooltip mouseleave->logo-carousel#hideTooltip",
                story_id: story.id,
                story_title: story.title,
                story_summary: strip_tags(story.summary.presence || story.content)
              } do %>
            <div class="logo-wrapper h-24 flex items-center justify-center">
              <%= raw story.logo_svg %>
            </div>
            <% end %>
            <% end %>
          <% end %>
        </div>
        <!-- Fade gradients on edges -->
        <div class="logo-carousel-fade-left"></div>
        <div class="logo-carousel-fade-right"></div>
      </div>
      
      <!-- Tooltips container - outside overflow hidden -->
      <% shuffled_stories.each do |story| %>
        <div class="logo-tooltip fixed opacity-0 pointer-events-none transition-all duration-200" 
             data-logo-carousel-target="tooltip" 
             data-story-id="<%= story.id %>"
             data-story-url="<%= post_path(story) %>"
             style="display: none; z-index: 9999;">
          <div class="bg-white rounded-lg shadow-xl p-4 md:p-5 w-72 md:w-80 border border-gray-100 hover:shadow-2xl transition-shadow cursor-pointer">
            <h3 class="text-lg font-bold text-gray-900 mb-2 leading-tight"><%= story.title %></h3>
            <div class="text-sm text-gray-600 mb-3">
              <%= strip_tags(story.summary.presence || story.content) %>
            </div>
            <div class="flex items-center justify-end">
              <span class="text-red-600 hover:text-red-700 font-semibold text-sm inline-flex items-center gap-1 transition-colors">
                Read more 
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                </svg>
              </span>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
<% end %>

<div class="space-y-16">

  <!-- Recent Posts -->
  <div class="space-y-4">
    <h2 class="text-center text-sm font-semibold text-gray-600 tracking-wide uppercase my-8 md:my-16">Latest wisdom to explore</h2>
    <div class="hidden lg:flex gap-6">
      <% # Split posts into 3 columns for desktop, maintaining left-to-right reading order %>
      <% column1_posts = [] %>
      <% column2_posts = [] %>
      <% column3_posts = [] %>
      
      <% @posts.each_with_index do |post, index| %>
        <% case index % 3 %>
        <% when 0 %>
          <% column1_posts << post %>
        <% when 1 %>
          <% column2_posts << post %>
        <% when 2 %>
          <% column3_posts << post %>
        <% end %>
      <% end %>
      
      <% # Desktop: 3 columns %>
      <% [column1_posts, column2_posts, column3_posts].each do |column_posts| %>
        <div class="flex-1 space-y-6">
          <% column_posts.each do |post| %>
            <%= render 'posts/post_tile', post: post %>
          <% end %>
        </div>
      <% end %>
    </div>
    
    <% # Tablet: 2 columns %>
    <div class="hidden md:flex lg:hidden gap-6">
      <% column1_posts = [] %>
      <% column2_posts = [] %>
      
      <% @posts.each_with_index do |post, index| %>
        <% if index % 2 == 0 %>
          <% column1_posts << post %>
        <% else %>
          <% column2_posts << post %>
        <% end %>
      <% end %>
      
      <% [column1_posts, column2_posts].each do |column_posts| %>
        <div class="flex-1 space-y-6">
          <% column_posts.each do |post| %>
            <%= render 'posts/post_tile', post: post %>
          <% end %>
        </div>
      <% end %>
    </div>
    
    <% # Mobile: 1 column %>
    <div class="md:hidden space-y-6">
      <% @posts.each do |post| %>
        <%= render 'posts/post_tile', post: post %>
      <% end %>
    </div>
  </div>
</div> 