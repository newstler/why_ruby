<%# 
  GitHub Sign-in Button Partial
  
  Local variables:
  - mobile: boolean (default: false) - whether this is for mobile layout
  - extra_classes: string (optional) - additional CSS classes
%>
<% mobile = local_assigns.fetch(:mobile, false) %>
<% extra_classes = local_assigns.fetch(:extra_classes, "") %>

<%= button_to user_github_omniauth_authorize_path, 
    method: :post, 
    data: { turbo: false }, 
    class: "inline-flex items-center #{mobile ? 'w-full justify-center' : ''} gap-2 px-4 py-2 border border-transparent #{mobile ? 'text-base' : 'text-sm'} font-medium rounded-md text-white bg-gray-800 hover:bg-gray-700 cursor-pointer transition-colors #{extra_classes}" do %>
  <%= inline_svg_tag "github.svg", class: "h-5 w-5" %>
  <span><%= t('auth.sign_in_with_github') %></span>
<% end %>
