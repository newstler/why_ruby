<%# Set page title %>
<% content_for(:title) { "Success Stories" } %>

<%# Override meta tags for success stories page %>
<% content_for :head do %>
  <!-- SEO Meta Tags -->
  <meta name="description" content="Real-world success stories from companies using Ruby and Rails">
  <meta name="keywords" content="ruby success stories, rails case studies, ruby companies, rails startups">
  <link rel="canonical" href="<%= success_stories_url %>">
  
  <!-- Open Graph / Facebook Meta Tags -->
  <meta property="og:type" content="website">
  <meta property="og:url" content="<%= success_stories_url %>">
  <meta property="og:title" content="<%= full_page_title("Success Stories") %>">
  <meta property="og:description" content="Real-world success stories from companies using Ruby and Rails">
  <meta property="og:image" content="<%= versioned_og_image_url %>">
  <meta property="og:site_name" content="<%= t('meta.site.name') %>">
  <meta property="og:locale" content="<%= I18n.locale.to_s.gsub('-', '_') %>">
  
  <!-- Twitter Card Meta Tags -->
  <meta name="twitter:card" content="summary_large_image">
  <meta name="twitter:url" content="<%= success_stories_url %>">
  <meta name="twitter:title" content="<%= full_page_title("Success Stories") %>">
  <meta name="twitter:description" content="Real-world success stories from companies using Ruby and Rails">
  <meta name="twitter:image" content="<%= versioned_og_image_url %>">
  <meta name="twitter:site" content="<%= t('meta.social.twitter_site') %>">
  <meta name="twitter:creator" content="<%= t('meta.social.twitter_creator') %>">
<% end %>

<div class="max-w-7xl mx-auto">
  <div class="mb-8">
    <h1 class="text-4xl font-black text-gray-900 mb-4">Success Stories</h1>
    <p class="text-lg text-gray-600">Discover how Ruby empowers teams to build amazing things and change the world.</p>
  </div>

  <% if @posts.any? %>
    <!-- Desktop: 3 columns -->
    <div class="hidden lg:flex gap-6">
      <% # Split posts into 3 columns for desktop, maintaining left-to-right reading order %>
      <% column1_posts = [] %>
      <% column2_posts = [] %>
      <% column3_posts = [] %>
      
      <% @posts.each_with_index do |post, index| %>
        <% case index % 3 %>
        <% when 0 %>
          <% column1_posts << post %>
        <% when 1 %>
          <% column2_posts << post %>
        <% when 2 %>
          <% column3_posts << post %>
        <% end %>
      <% end %>
      
      <% [column1_posts, column2_posts, column3_posts].each do |column_posts| %>
        <div class="flex-1 space-y-6">
          <% column_posts.each do |post| %>
            <%= render 'posts/post_tile', post: post %>
          <% end %>
        </div>
      <% end %>
    </div>
    
    <!-- Tablet: 2 columns -->
    <div class="hidden md:flex lg:hidden gap-6">
      <% column1_posts = [] %>
      <% column2_posts = [] %>
      
      <% @posts.each_with_index do |post, index| %>
        <% if index % 2 == 0 %>
          <% column1_posts << post %>
        <% else %>
          <% column2_posts << post %>
        <% end %>
      <% end %>
      
      <% [column1_posts, column2_posts].each do |column_posts| %>
        <div class="flex-1 space-y-6">
          <% column_posts.each do |post| %>
            <%= render 'posts/post_tile', post: post %>
          <% end %>
        </div>
      <% end %>
    </div>
    
    <!-- Mobile: 1 column -->
    <div class="md:hidden space-y-6">
      <% @posts.each do |post| %>
        <%= render 'posts/post_tile', post: post %>
      <% end %>
    </div>
    
    <div class="mt-12 mb-8 text-center">
      <% if user_signed_in? %>
        <%= link_to "Share your success story →", new_post_path(type: 'success_story'), 
            class: "text-gray-400 hover:text-gray-600 transition-colors" %>
      <% else %>
        <%= link_to "Share your success story →", 
            github_auth_with_return_path(return_to: new_post_path(type: 'success_story')),
            class: "text-gray-400 hover:text-gray-600 transition-colors" %>
      <% end %>
    </div>
    
    <div class="mt-12 flex justify-center">
      <%= paginate @posts %>
    </div>
  <% else %>
    <div class="bg-white rounded-lg shadow-sm p-8 text-center">
      <div class="mb-4">
        <%= inline_svg_tag "document.svg", class: "w-16 h-16 mx-auto text-gray-400" %>
      </div>
      <h2 class="text-xl font-semibold text-gray-900 mb-2">No success stories yet</h2>
      <p class="text-gray-600 mb-6">Be the first to share a success story!</p>
      <% if user_signed_in? %>
        <%= link_to "Share Your Success Story", new_post_path, class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-red-600 hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500" %>
      <% else %>
        <p class="text-gray-500">Sign in to share your success story</p>
        <%= render "shared/github_signin_button" %>
      <% end %>
    </div>
  <% end %>
</div>
