<div class="space-y-16">
  <!-- Hero Section -->
  <div class="max-w-4xl  mx-auto flex flex-col items-center">
    <%= image_tag "heart.png", class: "w-32 md:w-64 h-32 md:h-64" %>
    <p class="text-2xl md:text-6xl text-gray-600 font-bold text-center mt-8">
      Discover why <span class="text-red-600">Ruby</span> continues to be a <span class="text-red-600">beloved language</span> for developers worldwide:
    </p>

<!--    <p class="text-xl md:text-3xl text-gray-600 font-bold text-center mt-8">-->
<!--      And share articles, tutorials, and resources with our community.-->
<!--    </p>-->
  </div>

  <!-- Pinned Posts -->
  <% if @pinned_posts.any? %>
    <div class="space-y-4">
<!--      <h2 class="text-2xl font-bold text-gray-900">Featured Posts</h2>-->
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        <% @pinned_posts.each do |post| %>
          <%= link_to post_link_url(post), post_link_options(post).merge(class: "block bg-white shadow rounded-lg p-6 border-2 border-red-200 hover:shadow-lg transition-shadow") do %>
            <h3 class="text-lg font-semibold mb-2 text-gray-900 hover:text-red-600">
              <%= post.title %>
            </h3>
            <% if post.summary.present? %>
              <div class="text-gray-600 text-sm mb-4 prose prose-sm max-w-none">
                <%= raw markdown_to_html(post.summary) %>
              </div>
            <% end %>
            <div class="flex flex-wrap items-center gap-x-3 gap-y-1 text-sm">
              <div class="flex items-center space-x-2">
                <% if post.user.present? %>
                  <% if post.user.avatar_url.present? %>
                    <%= image_tag post.user.avatar_url, alt: post.user.username, class: "h-5 w-5 rounded-full" %>
                  <% end %>
                  <span class="text-gray-700"><%= post.user.username %></span>
                <% else %>
                  <span class="text-gray-400 italic">[Deleted User]</span>
                <% end %>
              </div>
              <span class="text-gray-500"><%= format_short_date(post.created_at) %></span>
              <% if post.comments.any? %>
                <div class="flex items-center space-x-1 text-gray-500">
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"></path>
                  </svg>
                  <span><%= post.comments.count %></span>
                </div>
              <% end %>
            </div>
          <% end %>
        <% end %>
      </div>
    </div>
  <% end %>



  <!-- Recent Posts -->
  <div class="space-y-4">
    <h2 class="text-2xl font-bold text-gray-900">Recent</h2>
    <div class="space-y-4">
      <% @posts.each do |post| %>
        <%= link_to post_link_url(post), post_link_options(post).merge(class: "block bg-white shadow rounded-lg p-6 hover:shadow-lg transition-shadow") do %>
          <div class="flex items-start justify-between">
            <div class="flex-1">
              <div class="flex items-center space-x-3 mb-2">
                <% if post.category %>
                  <span class="text-sm text-gray-500"><%= post.category.name %></span>
                <% else %>
                  <span class="text-sm text-gray-400 italic">Uncategorized</span>
                <% end %>
                <% if post.link? %>
                  <span class="text-sm text-blue-600">ðŸ”— External Link</span>
                <% end %>
              </div>
              <h3 class="text-xl font-semibold mb-2 text-gray-900 hover:text-red-600">
                <%= post.title %>
              </h3>
              <% if post.summary.present? %>
                <div class="text-gray-600 mb-4 prose prose-sm max-w-none">
                  <%= raw markdown_to_html(post.summary) %>
                </div>
              <% end %>
              <div class="flex flex-wrap items-center gap-x-4 gap-y-2">
                <div class="flex items-center space-x-2">
                  <% if post.user.present? %>
                    <% if post.user.avatar_url.present? %>
                      <%= image_tag post.user.avatar_url, alt: post.user.username, class: "h-6 w-6 rounded-full" %>
                    <% end %>
                    <span class="text-sm text-gray-700"><%= post.user.username %></span>
                  <% else %>
                    <span class="text-sm text-gray-400 italic">[Deleted User]</span>
                  <% end %>
                </div>
                <span class="text-sm text-gray-500"><%= format_post_date(post.created_at) %></span>
                <% if post.comments.any? %>
                  <div class="flex items-center space-x-1 text-sm text-gray-500">
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"></path>
                    </svg>
                    <span><%= post.comments.count %></span>
                  </div>
                <% end %>
                <% if post.tags.any? %>
                  <div class="hidden md:flex flex-wrap gap-1">
                    <% post.tags.each do |tag| %>
                      <span class="text-xs bg-gray-200 text-gray-700 px-2 py-1 rounded"><%= tag.name %></span>
                    <% end %>
                  </div>
                <% end %>
              </div>
            </div>
            <% if post.title_image_url.present? %>
              <div class="ml-6 flex-shrink-0">
                <%= image_tag post.title_image_url, alt: post.title, class: "h-24 w-24 object-cover rounded-lg" %>
              </div>
            <% end %>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
</div> 