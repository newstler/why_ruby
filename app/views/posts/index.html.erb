<div class="space-y-6">
  <!-- Page Header -->
    <div class="flex items-center justify-between">
      <h1 class="text-2xl font-bold text-gray-900">Your Posts</h1>
      <%= link_to new_post_path, class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-red-600 hover:bg-red-700 transition-colors" do %>
        <%= inline_svg_tag "plus.svg", class: "w-5 h-5 mr-2" %>
        New Post
      <% end %>
    </div>

  <!-- Posts Table -->
  <div class="bg-white shadow rounded-lg overflow-hidden">
    <% if @posts.any? %>
      <div class="divide-y divide-gray-200">
        <% @posts.each do |post| %>
          <div class="p-6 hover:bg-gray-50">
            <div class="flex items-start justify-between">
              <!-- Main content area -->
              <div class="flex-1 min-w-0 mr-6">
                <!-- Title row with image -->
                <div class="flex items-start mb-3">
                  <% if post.title_image_url.present? %>
                    <div class="flex-shrink-0 mr-4">
                      <%= image_tag post.title_image_url, alt: post.title, class: "h-20 w-20 rounded object-cover" %>
                    </div>
                  <% end %>
                  <div class="flex-1 min-w-0">
                    <h3 class="text-lg font-semibold text-gray-900 mb-1">
                      <%= link_to post.title, post_link_url(post), post_link_options(post).merge(class: "hover:text-red-600") %>
                    </h3>
                    <!-- Metadata badges -->
                    <div class="flex flex-wrap items-center gap-2 mb-2">
                      <% if post.link? && (domain = extract_domain(post.url)) %>
                        <span class="inline-flex items-center gap-1 py-0.5 text-xs text-gray-400 underline">
                          <%= domain %>
                        </span>
                      <% elsif !post.link? %>
                        <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-green-100 text-green-800">
                          Article
                        </span>
                      <% end %>
                      
                      <% if post.published? %>
                        <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-green-100 text-green-800">
                          Published
                        </span>
                      <% else %>
                        <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-yellow-100 text-yellow-800">
                          Draft
                        </span>
                      <% end %>
                      
                      <% if post.needs_admin_review? %>
                        <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-red-100 text-red-800">
                          Under Review
                        </span>
                      <% end %>
                      
                      <% if post.pin_position.present? %>
                        <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-purple-100 text-purple-800">
                          Pinned
                        </span>
                      <% end %>
                      
                      <% if post.category %>
                        <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-gray-100 text-gray-800">
                          <%= post.category.name %>
                        </span>
                      <% end %>
                      
                      <span class="text-xs text-gray-500">
                        <%= format_post_date(post.created_at) %>
                      </span>
                      
                      <% if post.comments.any? %>
                        <span class="inline-flex items-center text-xs text-gray-500">
                          <%= inline_svg_tag "comment.svg", class: "w-3.5 h-3.5 mr-1" %>
                          <%= post.comments.count %> comments
                        </span>
                      <% end %>
                    </div>
                  </div>
                </div>
                
                <!-- Summary -->
                <% if post.summary.present? %>
                  <div class="text-sm text-gray-600 prose prose-sm max-w-none mb-3">
                    <%= raw markdown_to_html(post.summary) %>
                  </div>
                <% end %>
                
                <!-- Tags -->
                <% if post.tags.any? %>
                  <div class="flex flex-wrap gap-2">
                    <% post.tags.each do |tag| %>
                      <%= render 'shared/tag', tag: tag, link: false, light: true, class: 'text-xs' %>
                    <% end %>
                  </div>
                <% end %>
              </div>
              
              <!-- Actions -->
              <div class="flex-shrink-0 flex items-center space-x-2">
                <% if post.link? %>
                  <%= link_to post.url, target: "_blank", rel: "noopener", class: "p-2 text-gray-400 hover:text-gray-600 hover:bg-gray-100 rounded transition-colors", title: "View external link" do %>
                    <%= inline_svg_tag "external-link.svg", class: "w-5 h-5" %>
                  <% end %>
                <% else %>
                  <%= link_to post_path(post), class: "p-2 text-gray-400 hover:text-gray-600 hover:bg-gray-100 rounded transition-colors", title: "View post" do %>
                    <%= inline_svg_tag "view.svg", class: "w-5 h-5" %>
                  <% end %>
                <% end %>
                <%= link_to edit_post_path(post), class: "p-2 text-indigo-600 hover:text-indigo-900 hover:bg-indigo-50 rounded transition-colors", title: "Edit" do %>
                  <%= inline_svg_tag "edit.svg", class: "w-5 h-5" %>
                <% end %>
                <%= link_to post_path(post), method: :delete, data: { confirm: "Are you sure you want to delete this post?" }, class: "p-2 text-red-600 hover:text-red-900 hover:bg-red-50 rounded transition-colors", title: "Delete" do %>
                  <%= inline_svg_tag "delete.svg", class: "w-5 h-5" %>
                <% end %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
      
      <!-- Pagination -->
      <% if @posts.total_pages > 1 %>
        <div class="px-6 py-4 border-t border-gray-200">
          <%= paginate @posts, theme: 'tailwindcss' %>
        </div>
      <% end %>
    <% else %>
      <div class="text-center py-12">
        <%= inline_svg_tag "document.svg", class: "mx-auto h-12 w-12 text-gray-400" %>
        <h3 class="mt-2 text-sm font-medium text-gray-900">No posts</h3>
        <p class="mt-1 text-sm text-gray-500">Get started by creating a new post.</p>
        <div class="mt-6">
          <%= link_to new_post_path, class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-red-600 hover:bg-red-700" do %>
            <%= inline_svg_tag "plus.svg", class: "w-5 h-5 mr-2" %>
            New Post
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>