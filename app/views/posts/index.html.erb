<div class="space-y-16">
  <!-- Hero Section -->
  <div class="max-w-4xl  mx-auto flex flex-col items-center">
    <%= image_tag "heart.png", class: "w-48 h-48" %>
    <p class="text-6xl text-gray-600 font-bold text-center mt-8">
      Discover why <span class="text-red-600">Ruby</span> continues to be a <span class="text-red-600">beloved language</span> for developers worldwide.
    </p>

    <p class="text-3xl/12 text-gray-600 font-bold text-center mt-8">
      And share articles, tutorials, and resources with our community.
    </p>
  </div>

  <!-- Pinned Posts -->
  <% if @pinned_posts.any? %>
    <div class="space-y-4">
<!--      <h2 class="text-2xl font-bold text-gray-900">Featured Posts</h2>-->
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        <% @pinned_posts.each do |post| %>
          <div class="bg-white shadow rounded-lg p-6 border-2 border-red-200">
            <h3 class="text-lg font-semibold mb-2">
              <%= link_to post.title, post, class: "text-gray-900 hover:text-red-600" %>
            </h3>
            <% if post.summary.present? %>
              <p class="text-gray-600 text-sm mb-4"><%= truncate(post.summary, length: 150) %></p>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
  <% end %>



  <!-- Recent Posts -->
  <div class="space-y-4">
    <h2 class="text-2xl font-bold text-gray-900">Recent</h2>
    <div class="space-y-4">
      <% @posts.each do |post| %>
        <div class="bg-white shadow rounded-lg p-6">
          <div class="flex items-start justify-between">
            <div class="flex-1">
              <div class="flex items-center space-x-3 mb-2">
                <% if post.category %>
                  <span class="text-sm text-gray-500"><%= post.category.name %></span>
                <% else %>
                  <span class="text-sm text-gray-400 italic">Uncategorized</span>
                <% end %>
                <% if post.link? %>
                  <span class="text-sm text-blue-600">ðŸ”— External Link</span>
                <% end %>
              </div>
              <h3 class="text-xl font-semibold mb-2">
                <%= link_to post.title, post, class: "text-gray-900 hover:text-red-600" %>
              </h3>
              <% if post.summary.present? %>
                <p class="text-gray-600 mb-4"><%= truncate(post.summary, length: 200) %></p>
              <% end %>
              <div class="flex items-center space-x-4">
                <div class="flex items-center space-x-2">
                  <% if post.user.avatar_url.present? %>
                    <%= image_tag post.user.avatar_url, alt: post.user.username, class: "h-6 w-6 rounded-full" %>
                  <% end %>
                  <%= link_to post.user.username, user_path(post.user), class: "text-sm text-gray-700 hover:text-gray-900" %>
                </div>
                <span class="text-sm text-gray-500"><%= post.created_at.strftime("%B %d, %Y") %></span>
                <% if post.tags.any? %>
                  <div class="flex flex-wrap gap-1">
                    <% post.tags.each do |tag| %>
                      <%= link_to tag.name, tag_path(tag), class: "text-xs bg-gray-200 text-gray-700 px-2 py-1 rounded hover:bg-gray-300" %>
                    <% end %>
                  </div>
                <% end %>
              </div>
            </div>
            <% if post.title_image_url.present? %>
              <div class="ml-6 flex-shrink-0">
                <%= image_tag post.title_image_url, alt: post.title, class: "h-24 w-24 object-cover rounded-lg" %>
              </div>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div> 