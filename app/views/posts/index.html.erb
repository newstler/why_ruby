<div class="space-y-6">
  <!-- Page Header -->
    <div class="flex items-center justify-between">
      <h1 class="text-2xl font-bold text-gray-900">Your Posts</h1>
      <%= link_to new_post_path, class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-red-600 hover:bg-red-700 transition-colors" do %>
        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
        </svg>
        New Post
      <% end %>
    </div>

  <!-- Posts Table -->
  <div class="bg-white shadow rounded-lg overflow-hidden">
    <% if @posts.any? %>
      <div class="divide-y divide-gray-200">
        <% @posts.each do |post| %>
          <div class="p-6 hover:bg-gray-50">
            <div class="flex items-start justify-between">
              <!-- Main content area -->
              <div class="flex-1 min-w-0 mr-6">
                <!-- Title row with image -->
                <div class="flex items-start mb-3">
                  <% if post.title_image_url.present? %>
                    <div class="flex-shrink-0 mr-4">
                      <%= image_tag post.title_image_url, alt: post.title, class: "h-20 w-20 rounded object-cover" %>
                    </div>
                  <% end %>
                  <div class="flex-1 min-w-0">
                    <h3 class="text-lg font-semibold text-gray-900 mb-1">
                      <%= link_to post.title, post_link_url(post), post_link_options(post).merge(class: "hover:text-red-600") %>
                    </h3>
                    <!-- Metadata badges -->
                    <div class="flex flex-wrap items-center gap-2 mb-2">
                      <% if post.link? %>
                        <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-blue-100 text-blue-800">
                          External Link
                        </span>
                      <% else %>
                        <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-green-100 text-green-800">
                          Article
                        </span>
                      <% end %>
                      
                      <% if post.published? %>
                        <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-green-100 text-green-800">
                          Published
                        </span>
                      <% else %>
                        <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-yellow-100 text-yellow-800">
                          Draft
                        </span>
                      <% end %>
                      
                      <% if post.needs_admin_review? %>
                        <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-red-100 text-red-800">
                          Under Review
                        </span>
                      <% end %>
                      
                      <% if post.pin_position.present? %>
                        <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-purple-100 text-purple-800">
                          Pinned
                        </span>
                      <% end %>
                      
                      <% if post.category %>
                        <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-gray-100 text-gray-800">
                          <%= post.category.name %>
                        </span>
                      <% end %>
                      
                      <span class="text-xs text-gray-500">
                        <%= format_post_date(post.created_at) %>
                      </span>
                      
                      <% if post.comments.any? %>
                        <span class="inline-flex items-center text-xs text-gray-500">
                          <svg class="w-3.5 h-3.5 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"></path>
                          </svg>
                          <%= post.comments.count %> comments
                        </span>
                      <% end %>
                    </div>
                  </div>
                </div>
                
                <!-- Summary -->
                <% if post.summary.present? %>
                  <div class="text-sm text-gray-600 prose prose-sm max-w-none mb-3">
                    <%= raw markdown_to_html(post.summary) %>
                  </div>
                <% end %>
                
                <!-- Tags -->
                <% if post.tags.any? %>
                  <div class="flex flex-wrap gap-1">
                    <% post.tags.each do |tag| %>
                      <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-gray-100 text-gray-700">
                        <%= tag.name %>
                      </span>
                    <% end %>
                  </div>
                <% end %>
              </div>
              
              <!-- Actions -->
              <div class="flex-shrink-0 flex items-center space-x-2">
                <% if post.link? %>
                  <%= link_to post.url, target: "_blank", rel: "noopener", class: "p-2 text-gray-400 hover:text-gray-600 hover:bg-gray-100 rounded transition-colors", title: "View external link" do %>
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path>
                    </svg>
                  <% end %>
                <% else %>
                  <%= link_to post_path(post), class: "p-2 text-gray-400 hover:text-gray-600 hover:bg-gray-100 rounded transition-colors", title: "View post" do %>
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
                    </svg>
                  <% end %>
                <% end %>
                <%= link_to edit_post_path(post), class: "p-2 text-indigo-600 hover:text-indigo-900 hover:bg-indigo-50 rounded transition-colors", title: "Edit" do %>
                  <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
                  </svg>
                <% end %>
                <%= link_to post_path(post), method: :delete, data: { confirm: "Are you sure you want to delete this post?" }, class: "p-2 text-red-600 hover:text-red-900 hover:bg-red-50 rounded transition-colors", title: "Delete" do %>
                  <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
                  </svg>
                <% end %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
      
      <!-- Pagination -->
      <% if @posts.total_pages > 1 %>
        <div class="px-6 py-4 border-t border-gray-200">
          <%= paginate @posts, theme: 'tailwindcss' %>
        </div>
      <% end %>
    <% else %>
      <div class="text-center py-12">
        <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
        </svg>
        <h3 class="mt-2 text-sm font-medium text-gray-900">No posts</h3>
        <p class="mt-1 text-sm text-gray-500">Get started by creating a new post.</p>
        <div class="mt-6">
          <%= link_to new_post_path, class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-red-600 hover:bg-red-700" do %>
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
            </svg>
            New Post
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>