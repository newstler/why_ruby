<div id="post_<%= post.id %>_summary" class="bg-gray-50 p-4 rounded-lg">
  <% if post.summary.present? %>
    <h3 class="text-sm font-semibold text-gray-700 mb-2">AI Summary</h3>
    <div class="text-gray-600 text-sm leading-relaxed prose prose-sm max-w-none">
      <%= raw markdown_to_html(post.summary) %>
    </div>
  <% else %>
    <p class="text-gray-500 italic text-sm">Summary is being generated...</p>
  <% end %>
</div> 