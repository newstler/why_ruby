<div class="space-y-8">
  <!-- Profile Header -->
  <div class="bg-white shadow rounded-lg p-8">
    <div class="flex items-start space-x-6">
      <% if @user.avatar_url.present? %>
        <%= image_tag @user.avatar_url, alt: @user.username, class: "h-24 w-24 rounded-full" %>
      <% else %>
        <span class="h-24 w-24 rounded-full bg-gray-300 flex items-center justify-center text-3xl font-bold">
          <%= @user.username.first.upcase %>
        </span>
      <% end %>
      
      <div class="flex-1">
        <h1 class="text-3xl font-bold text-gray-900 mb-1"><%= @user.display_name %></h1>
        <p class="text-lg text-gray-600 mb-2">@<%= @user.username %></p>
        
        <% if @user.bio.present? %>
          <p class="text-gray-700 mb-4"><%= @user.bio %></p>
        <% end %>
        
        <div class="flex flex-wrap items-center gap-x-6 gap-y-2 text-sm text-gray-600">
          <% if @user.location.present? %>
            <span class="flex items-center">
              <svg class="w-4 h-4 mr-1" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M5.05 4.05a7 7 0 119.9 9.9L10 18.9l-4.95-4.95a7 7 0 010-9.9zM10 11a2 2 0 100-4 2 2 0 000 4z" clip-rule="evenodd"/>
              </svg>
              <%= @user.location %>
            </span>
          <% end %>
          
          <% if @user.company.present? %>
            <span class="flex items-center">
              <svg class="w-4 h-4 mr-1" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M4 4a2 2 0 012-2h8a2 2 0 012 2v12a1 1 0 110 2h-3a1 1 0 01-1-1v-2a1 1 0 00-1-1H9a1 1 0 00-1 1v2a1 1 0 01-1 1H4a1 1 0 110-2V4zm3 1h2v2H7V5zm2 4H7v2h2V9zm2-4h2v2h-2V5zm2 4h-2v2h2V9z" clip-rule="evenodd"/>
              </svg>
              <%= @user.company %>
            </span>
          <% end %>
          
          <span>Joined <%= @user.created_at.strftime("%B %Y") %></span>
          <span><%= pluralize(@user.published_posts_count, "published post") %></span>
          <span><%= pluralize(@user.published_comments_count, "comment") %></span>
          
          <% if @user.trusted? %>
            <span class="text-green-600 font-medium">‚úì Trusted User</span>
          <% end %>
          <% if @user.admin? %>
            <span class="text-red-600 font-medium">Admin</span>
          <% end %>
        </div>
        
        <!-- Social Links -->
        <% if @user.social_links.any? %>
          <div class="flex items-center space-x-4 mt-4">
            <% @user.social_links.each do |platform, url| %>
              <% next unless url.present? %>
              <%= link_to url, target: "_blank", rel: "noopener", class: "text-gray-600 hover:text-gray-900" do %>
                <% case platform %>
                <% when :github %>
                  <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
                  </svg>
                <% when :twitter %>
                  <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M23.953 4.57a10 10 0 01-2.825.775 4.958 4.958 0 002.163-2.723c-.951.555-2.005.959-3.127 1.184a4.92 4.92 0 00-8.384 4.482C7.69 8.095 4.067 6.13 1.64 3.162a4.822 4.822 0 00-.666 2.475c0 1.71.87 3.213 2.188 4.096a4.904 4.904 0 01-2.228-.616v.06a4.923 4.923 0 003.946 4.827 4.996 4.996 0 01-2.212.085 4.936 4.936 0 004.604 3.417 9.867 9.867 0 01-6.102 2.105c-.39 0-.779-.023-1.17-.067a13.995 13.995 0 007.557 2.209c9.053 0 13.998-7.496 13.998-13.985 0-.21 0-.42-.015-.63A9.935 9.935 0 0024 4.59z"/>
                  </svg>
                <% when :website %>
                  <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9a9 9 0 01-9-9m9 9c1.657 0 3-4.03 3-9s-1.343-9-3-9m0 18c-1.657 0-3-4.03-3-9s1.343-9 3-9m-9 9a9 9 0 019-9"/>
                  </svg>
                <% when :linkedin %>
                  <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
                  </svg>
                <% end %>
              <% end %>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
  </div>

  <!-- Ruby Repositories Section -->
  <% ruby_repos = @user.ruby_repositories %>
  <% if ruby_repos.any? %>
    <div class="bg-white shadow rounded-lg p-8">
      <h2 class="text-2xl font-bold text-gray-900 mb-6">Ruby Projects on GitHub</h2>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
        <% ruby_repos.first(6).each do |repo| %>
          <div class="border rounded-lg p-4 hover:shadow-md transition-shadow">
            <%= link_to repo[:url], target: "_blank", rel: "noopener", class: "block" do %>
              <div class="flex items-start justify-between">
                <div class="flex-1">
                  <h3 class="font-semibold text-blue-600 hover:text-blue-800">
                    <%= repo[:name] %>
                    <% if repo[:fork] %>
                      <span class="text-xs text-gray-500 ml-1">(fork)</span>
                    <% end %>
                  </h3>
                  <% if repo[:description].present? %>
                    <p class="text-sm text-gray-600 mt-1 line-clamp-2"><%= repo[:description] %></p>
                  <% end %>
                  <div class="flex items-center space-x-4 mt-2 text-xs text-gray-500">
                    <% if repo[:language].present? %>
                      <span class="flex items-center">
                        <span class="w-3 h-3 rounded-full bg-red-500 mr-1"></span>
                        <%= repo[:language] %>
                      </span>
                    <% end %>
                    <% if repo[:stars] > 0 %>
                      <span class="flex items-center">
                        ‚≠ê <%= repo[:stars] %>
                      </span>
                    <% end %>
                    <span>Updated <%= time_ago_in_words(repo[:updated_at]) %> ago</span>
                  </div>
                </div>
              </div>
            <% end %>
          </div>
        <% end %>
      </div>
      
      <% if ruby_repos.size > 6 %>
        <div class="mt-4 text-center">
          <%= link_to "View all #{ruby_repos.size} Ruby repositories on GitHub ‚Üí", @user.github_profile_url, 
              target: "_blank", rel: "noopener", class: "text-blue-600 hover:text-blue-800 text-sm" %>
        </div>
      <% end %>
    </div>
  <% end %>

  <!-- Recent Comments Section -->
  <% if @recent_comments && @recent_comments.any? %>
    <div class="bg-white shadow rounded-lg p-8">
      <h2 class="text-2xl font-bold text-gray-900 mb-6">Recent Comments</h2>
      <div class="space-y-4">
        <% @recent_comments.each do |comment| %>
          <div class="border-l-4 border-gray-200 pl-4">
            <div class="text-sm text-gray-500 mb-1">
              On <%= link_to comment.post.title, post_path(comment.post), class: "font-medium text-blue-600 hover:text-blue-800" %>
            </div>
            <p class="text-gray-700"><%= truncate(comment.body, length: 200) %></p>
            <p class="text-xs text-gray-500 mt-1"><%= time_ago_in_words(comment.created_at) %> ago</p>
          </div>
        <% end %>
      </div>
    </div>
  <% end %>

  <!-- Published Posts Section -->
  <div class="space-y-4">
    <h2 class="text-2xl font-bold text-gray-900">Published Posts</h2>
    <% if @posts.any? %>
      <% @posts.each do |post| %>
        <div class="bg-white shadow rounded-lg p-6">
          <div class="flex items-start justify-between">
            <div class="flex-1">
              <div class="flex items-center space-x-3 mb-2">
                <% if post.category %>
                  <span class="text-sm text-gray-500"><%= post.category.name %></span>
                <% else %>
                  <span class="text-sm text-gray-400 italic">Uncategorized</span>
                <% end %>
                <% if post.link? %>
                  <span class="text-sm text-blue-600">üîó External Link</span>
                <% end %>
              </div>
              <h3 class="text-xl font-semibold mb-2">
                <%= link_to post.title, post_link_url(post), post_link_options(post).merge(class: "text-gray-900 hover:text-red-600") %>
              </h3>
              <% if post.summary.present? %>
                <p class="text-gray-600 mb-4"><%= truncate(post.summary, length: 200) %></p>
              <% end %>
              <div class="flex flex-wrap items-center gap-x-4 gap-y-2">
                <span class="text-sm text-gray-500"><%= format_post_date(post.created_at) %></span>
                <div class="flex items-center space-x-1 text-sm text-gray-500">
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"></path>
                  </svg>
                  <span><%= post.comments.published.count %></span>
                </div>
                <% if post.tags.any? %>
                  <div class="hidden md:flex flex-wrap gap-1">
                    <% post.tags.each do |tag| %>
                      <%= link_to tag.name, tag_path(tag), class: "text-xs bg-gray-200 text-gray-700 px-2 py-1 rounded hover:bg-gray-300" %>
                    <% end %>
                  </div>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      <% end %>
      
      <div class="mt-8">
        <%= paginate @posts %>
      </div>
    <% else %>
      <div class="bg-white shadow rounded-lg p-8 text-center">
        <p class="text-gray-600">No published posts yet.</p>
      </div>
    <% end %>
  </div>
</div>