<div class="space-y-8">
  <!-- Profile Header -->
  <div class="bg-white shadow rounded-lg p-8">
    <div class="flex items-start space-x-6">
      <% if @user.avatar_url.present? %>
        <%= image_tag @user.avatar_url, alt: @user.username, class: "h-24 w-24 rounded-full" %>
      <% else %>
        <span class="h-24 w-24 rounded-full bg-gray-300 flex items-center justify-center text-3xl font-bold">
          <%= @user.username.first.upcase %>
        </span>
      <% end %>
      
      <div class="flex-1">
        <h1 class="text-3xl font-bold text-gray-900 mb-1"><%= @user.display_name %></h1>
        <p class="text-lg text-gray-600 mb-2">@<%= @user.username %></p>
        
        <% if @user.bio.present? %>
          <p class="text-gray-700 mb-4"><%= @user.bio %></p>
        <% end %>
        
        <div class="flex flex-wrap items-center gap-x-6 gap-y-2 text-sm text-gray-600">
          <% if @user.location.present? %>
            <span class="flex items-center">
              <%= inline_svg_tag "location.svg", class: "w-4 h-4 mr-1" %>
              <%= @user.location %>
            </span>
          <% end %>
          
          <% if @user.company.present? %>
            <span class="flex items-center">
              <%= inline_svg_tag "building.svg", class: "w-4 h-4 mr-1" %>
              <%= @user.company %>
            </span>
          <% end %>
          
          <span>Joined <%= @user.created_at.strftime("%B %Y") %></span>
          <span><%= pluralize(@user.published_posts_count, "published post") %></span>
          <span><%= pluralize(@user.published_comments_count, "comment") %></span>
          
          <% if @user.trusted? %>
            <span class="text-green-600 font-medium">‚úì Trusted User</span>
          <% end %>
          <% if @user.admin? %>
            <span class="text-red-600 font-medium">Admin</span>
          <% end %>
        </div>
        
        <!-- Social Links -->
        <% if @user.social_links.any? %>
          <div class="flex items-center space-x-4 mt-4">
            <% @user.social_links.each do |platform, url| %>
              <% next unless url.present? %>
              <%= link_to url, target: "_blank", rel: "noopener", class: "text-gray-600 hover:text-gray-900" do %>
                <% case platform %>
                <% when :github %>
                  <%= inline_svg_tag "github.svg", class: "w-6 h-6" %>
                <% when :twitter %>
                  <%= inline_svg_tag "twitter.svg", class: "w-6 h-6" %>
                <% when :website %>
                  <%= inline_svg_tag "globe.svg", class: "w-6 h-6" %>
                <% when :linkedin %>
                  <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
                  </svg>
                <% end %>
              <% end %>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
  </div>

  <!-- Ruby Repositories Section -->
  <% ruby_repos = @user.ruby_repositories %>
  <% if ruby_repos.any? %>
    <div class="bg-white shadow rounded-lg p-8">
      <h2 class="text-2xl font-bold text-gray-900 mb-6">Ruby Projects on GitHub</h2>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
        <% ruby_repos.first(6).each do |repo| %>
          <div class="border rounded-lg p-4 hover:shadow-md transition-shadow">
            <%= link_to repo[:url], target: "_blank", rel: "noopener", class: "block" do %>
              <div class="flex items-start justify-between">
                <div class="flex-1">
                  <h3 class="font-semibold text-blue-600 hover:text-blue-800">
                    <%= repo[:name] %>
                    <% if repo[:fork] %>
                      <span class="text-xs text-gray-500 ml-1">(fork)</span>
                    <% end %>
                  </h3>
                  <% if repo[:description].present? %>
                    <p class="text-sm text-gray-600 mt-1 line-clamp-2"><%= repo[:description] %></p>
                  <% end %>
                  <div class="flex items-center space-x-4 mt-2 text-xs text-gray-500">
                    <% if repo[:language].present? %>
                      <span class="flex items-center">
                        <span class="w-3 h-3 rounded-full bg-red-500 mr-1"></span>
                        <%= repo[:language] %>
                      </span>
                    <% end %>
                    <% if repo[:stars] > 0 %>
                      <span class="flex items-center">
                        ‚≠ê <%= repo[:stars] %>
                      </span>
                    <% end %>
                    <span>Updated <%= time_ago_in_words(repo[:updated_at]) %> ago</span>
                  </div>
                </div>
              </div>
            <% end %>
          </div>
        <% end %>
      </div>
      
      <% if ruby_repos.size > 6 %>
        <div class="mt-4 text-center">
          <%= link_to "View all #{ruby_repos.size} Ruby repositories on GitHub ‚Üí", @user.github_profile_url, 
              target: "_blank", rel: "noopener", class: "text-blue-600 hover:text-blue-800 text-sm" %>
        </div>
      <% end %>
    </div>
  <% end %>

  <!-- Recent Comments Section -->
  <% if @recent_comments && @recent_comments.any? %>
    <div class="bg-white shadow rounded-lg p-8">
      <h2 class="text-2xl font-bold text-gray-900 mb-6">Recent Comments</h2>
      <div class="space-y-4">
        <% @recent_comments.each do |comment| %>
          <div class="border-l-4 border-gray-200 pl-4">
            <div class="text-sm text-gray-500 mb-1">
              On <%= link_to comment.post.title, post_path(comment.post), class: "font-medium text-blue-600 hover:text-blue-800" %>
            </div>
            <p class="text-gray-700"><%= truncate(comment.body, length: 200) %></p>
            <p class="text-xs text-gray-500 mt-1"><%= time_ago_in_words(comment.created_at) %> ago</p>
          </div>
        <% end %>
      </div>
    </div>
  <% end %>

  <!-- Published Posts Section -->
  <div class="space-y-4">
    <h2 class="text-2xl font-bold text-gray-900">Published Posts</h2>
    <% if @posts.any? %>
      <% @posts.each do |post| %>
        <div class="bg-white shadow rounded-lg p-6">
          <div class="flex items-start justify-between">
            <div class="flex-1">
              <div class="flex items-center space-x-3 mb-2">
                <% if post.category %>
                  <span class="text-sm text-gray-500"><%= post.category.name %></span>
                <% else %>
                  <span class="text-sm text-gray-400 italic">Uncategorized</span>
                <% end %>
                <% if post.link? %>
                  <span class="text-sm text-blue-600">üîó External Link</span>
                <% end %>
              </div>
              <h3 class="text-xl font-semibold mb-2">
                <%= link_to post.title, post_link_url(post), post_link_options(post).merge(class: "text-gray-900 hover:text-red-600") %>
              </h3>
              <% if post.summary.present? %>
                <p class="text-gray-600 mb-4"><%= truncate(post.summary, length: 200) %></p>
              <% end %>
              <div class="flex flex-wrap items-center gap-x-4 gap-y-2">
                <span class="text-sm text-gray-500"><%= format_post_date(post.created_at) %></span>
                <div class="flex items-center space-x-1 text-sm text-gray-500">
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"></path>
                  </svg>
                  <span><%= post.comments.published.count %></span>
                </div>
                <% if post.tags.any? %>
                  <div class="hidden md:flex flex-wrap gap-1">
                    <% post.tags.each do |tag| %>
                      <%= link_to tag.name, tag_path(tag), class: "text-xs bg-gray-200 text-gray-700 px-2 py-1 rounded hover:bg-gray-300" %>
                    <% end %>
                  </div>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      <% end %>
      
      <div class="mt-8">
        <%= paginate @posts %>
      </div>
    <% else %>
      <div class="bg-white shadow rounded-lg p-8 text-center">
        <p class="text-gray-600">No published posts yet.</p>
      </div>
    <% end %>
  </div>
</div>